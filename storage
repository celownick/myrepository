pages:
  stage: deploy
  allow_failure: false
  dependencies:
    - run-test
  only:
    refs:
      - merge_request
      - schedules
      - pipelines
  script:
script:
  - echo "Creating public directory for branch $CI_COMMIT_REF_NAME and pipeline $CI_PIPELINE_ID"
  - mkdir -p public/$CI_COMMIT_REF_NAME/$CI_PIPELINE_ID
  - echo "Copying reports to public/$CI_COMMIT_REF_NAME/$CI_PIPELINE_ID"
  - cp -r target/cucumber-reports-ext/cucumber-html-reports/* public/$CI_COMMIT_REF_NAME/$CI_PIPELINE_ID/
  - mv public/$CI_COMMIT_REF_NAME/$CI_PIPELINE_ID/overview-features.html public/$CI_COMMIT_REF_NAME/$CI_PIPELINE_ID/index.html
  - echo "Report available at: $CI_PAGES_URL/$CI_COMMIT_REF_NAME/$CI_PIPELINE_ID"
  - echo "$CI_PAGES_URL/$CI_COMMIT_REF_NAME/$CI_PIPELINE_ID" > public/$CI_COMMIT_REF_NAME/$CI_PIPELINE_ID/report_url.txt
  artifacts:
    paths:
      - public
    expire_in: 30 days



 script:
    - echo "Loading report URL from file..."
    - REPORT_URL=$(cat public/$CI_PIPELINE_ID/report_url.txt)
    - echo "Report URL: $REPORT_URL"
    - echo -e "$EMAIL_TEMPLATE" > email_body.txt
    - sed -i "s|{{pages_url}}|$REPORT_URL|g" email_body.txt
    - echo "Final email content:"
    - cat email_body.txt
    - |
      curl --url "smtp://mailhost-arec.xxx.ch:25" \
           --mail-from "your-address@example.com" \
           --mail-rcpt "recipient@example.com" \
           --upload-file email_body.txt
