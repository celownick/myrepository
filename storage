stages:
  - check
  - test

check-smb-access:
  stage: check
  before_script:
    - apt-get update && apt-get install -y smbclient  # Instalacja klienta SMB
  script:
    - echo "üîç Sprawdzanie dostƒôpnych zasob√≥w SMB na serwerze Windows..."
    - smbclient -L //192.168.X.Y/ -U $SMB_USERNAME%$SMB_PASSWORD
  only:
    - merge_requests
    - schedules
    - pipelines

run-tests:
  stage: test
  script:
    - echo "üìÇ Pobieranie plik√≥w log√≥w..."
    - smbclient //192.168.X.Y/Logs -U $SMB_USERNAME%$SMB_PASSWORD -c "ls"
    - smbclient //192.168.X.Y/Logs -U $SMB_USERNAME%$SMB_PASSWORD -c "get test.log"
    - cat test.log
  dependencies:
    - check-smb-access
